<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


        <ImageButton
            android:id="@+id/earlylearnerImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/earlylearner"

            />

        <TextView
            android:id="@+id/earlylearnerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="@string/earlyLearnerText"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:shadowColor="#000000"
            android:shadowDx= "1"
            android:shadowDy= "1"
            android:shadowRadius = "5"
            android:textStyle="bold|italic"
            />


    </FrameLayout>
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ImageButton
            android:id="@+id/santalandImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:src="@drawable/santaland" />

        <TextView
            android:id="@+id/santalandTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="SANTA LANDS \nAT \nTHE \nPINK PALACE"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:shadowColor="#000000"
            android:shadowDx= "1"
            android:shadowDy= "1"
            android:shadowRadius = "5"
            android:textStyle="bold|italic"/>

    </FrameLayout>
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ImageButton
            android:id="@+id/harrypotterImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:src="@drawable/harrypotter" />

        <TextView
            android:id="@+id/harrypotterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="HARRY POTTER \nSCAVENGER \nHUNT"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:shadowColor="#000000"
            android:shadowDx= "1"
            android:shadowDy= "1"
            android:shadowRadius = "5"
            android:textStyle="bold|italic"/>

    </FrameLayout>\

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ImageButton
            android:id="@+id/scienceofbeerImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:src="@drawable/sciencebeer" />

        <TextView
            android:id="@+id/scienceofbeerTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="SCIENCE \nOF \nBEER"
            android:textColor="@android:color/background_light"
            android:textSize="26sp"
            android:shadowColor="#000000"
            android:shadowDx= "1"
            android:shadowDy= "1"
            android:shadowRadius = "5"
            android:textStyle="bold|italic"/>

    </FrameLayout>

</LinearLayout>